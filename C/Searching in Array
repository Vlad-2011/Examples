#include <stdio.h>
 
int find_min_and_max(int arr[], int size) {
    int min = arr[0];  // Предполагаем, что первый элемент - минимальный
    int max = arr[0];  // Предполагаем, что первый элемент - максимальный
 
    for (int i = 1; i < size; i++) {
        if (arr[i] < min) {
            min = arr[i];  // Нашли элемент меньше текущего минимума
        }
        if (arr[i] > max) {
	        max = arr[i];  // Нашли элемент больше текущего максимума
        }
    }
    printf("Наименьшее число: %i\nНаибольшее число: %i", min, max);
}
 
int main() {
    int numbers[] = {5, 2, 8, 1, 9, 3, 7, 4, 6};
    int size = sizeof(numbers) / sizeof(numbers[0]);
 
    find_min_and_max(numbers, size);
 
    return 0;
}
