#include<stdio.h>
#include<stdlib.h>

int calculating(int arr[], int size) {
    int max = arr[0];
    for (int i = 0; i < size; i++) {
        if (arr[i] > max) {
            max = arr[i];
        }
    }
    return max;
}

int main()
{
    int size;
    
    printf("Введите размер массива: ");
    scanf("%i", &size);
    if (size < 1) {
        printf("Ошибка: размер массива не может быть меньше 1!");
        return 1;
    }

    int numbers[size];

    for (int i = 0; i < size; i++) {
        printf("%i-ое число массива: ", i+1);
        scanf("%i", &numbers[i]);
    }
    
    printf("Наибольшее число в массиве: %i", calculating(numbers, size));
    
    return 0;
}
