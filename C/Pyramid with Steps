#include<stdio.h>

int main()
{
    int height;
    
    printf("Введите высоту пирамиды: ");
    scanf("%i", &height);
    
    if (height <= 0) {
        printf("Ошибка: высота должна быть положительным числом\n");
        return 1;
    }
    
    for (int i = 1; i <= height; i++) {
        for (int j = 1; j <= i; j++) {
            printf("#");
        }
        printf("\n");
    }
    
    return 0;
}
