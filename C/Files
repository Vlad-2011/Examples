#include <stdio.h>

int main(void)
{
    int a, b, c;
    FILE *fout;
    fout = fopen("file.txt", "w");
    scanf("%i", &a);
    scanf("%i", &b);
    c = a + b;
    fprintf(fout, "%d %d %d", a, b, c);
    fclose(fout);

    FILE *S1, *S2;
    int x, y;
    printf("Введите число: ");
    scanf("%i", &x);
    S1 = fopen("S1.txt", "w");
    fprintf(S1, "%i", x);
    fclose(S1);
    S1 = fopen("S1.txt", "r");
    S2 = fopen("S2.txt", "w");
    fscanf(S1, "%i", &y);
    y += 3;
    fclose(S1);
    fprintf(S2, "%i\n", y);
    fclose(S2);

    return 0;
}
